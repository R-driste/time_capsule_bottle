{
    "manifest_version": 3,
    "name": "Handy Tools!",
    "description": "A collection of handy tools for your browser. Includes pomodoro and a time capsule.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
    {
        "resources": ["images/yaystarss.jpg"],
        "matches": ["<all_urls>"]
    }
    ]
}